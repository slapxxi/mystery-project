{
  "name": "mystery-project",
  "version": "0.0.1",
  "description": "Mystery project that exercises a wide variety of frontend development skills.",
  "main": "index.js",
  "repository": "https://github.com/slavapavlutin/mystery-project",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "start:debug": "DEBUG=express:* NODE_ENV=production node --inspect server.js",
    "build": "next build",
    "dev": "node server.js",
    "dev:debug": "DEBUG=express:* node --inspect server.js",
    "export": "next build && next export -o dist",
    "test": "jest",
    "image": "./bin/generate_low_quality_image",
    "lint-staged": "lint-staged",
    "docker": "yarn run docker:build && yarn run docker:run",
    "docker:build": "./bin/docker_build",
    "docker:run": "./bin/docker_run",
    "docker:attach": "docker exec -it server /bin/sh -c \"[ -e /bin/bash ] && /bin/bash || /bin/sh\"",
    "docker:stop": "docker container stop server",
    "docker:deploy": "env-cmd ./bin/docker_deploy",
    "analyze:server": "BUNDLE_ANALYZE=server yarn run build",
    "analyze:browser": "BUNDLE_ANALYZE=browser yarn run build"
  },
  "keywords": [
    "react",
    "testing",
    "spa",
    "ssr"
  ],
  "author": "Slava Pavlutin <sl.pavlutin@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@emotion/core": "^10.0.10",
    "@zeit/next-bundle-analyzer": "^0.1.2",
    "@zeit/next-css": "^1.0.1",
    "@zeit/next-typescript": "^1.1.1",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "dotenv": "^8.0.0",
    "emotion-theming": "^10.0.10",
    "env-cmd": "^9.0.1",
    "express": "^4.17.1",
    "express-session": "^1.16.1",
    "firebase": "^6.0.3",
    "firebase-admin": "^8.0.0",
    "isomorphic-unfetch": "^3.0.0",
    "lodash-es": "^4.17.11",
    "next": "^8.1.0",
    "next-i18next": "^0.40.1",
    "next-offline": "^4.0.1",
    "next-transpile-modules": "^2.3.1",
    "pipeline.macro": "^1.1.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "session-file-store": "^1.2.0",
    "url-parse": "^1.4.7",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/babel__core": "^7.1.2",
    "@types/body-parser": "^1.17.0",
    "@types/compression": "^0.0.36",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/express-session": "^1.15.12",
    "@types/jest": "^24.0.13",
    "@types/lodash-es": "^4.17.3",
    "@types/next": "^8.0.5",
    "@types/prettier": "^1.16.4",
    "@types/preval.macro": "^3.0.0",
    "@types/react": "^16.8.19",
    "@types/react-dom": "^16.8.4",
    "@types/session-file-store": "^1.2.0",
    "@types/sharp": "^0.22.2",
    "@types/svgo": "^1.0.1",
    "@types/url-parse": "^1.4.3",
    "@types/uuid": "^3.4.4",
    "@types/zeit__next-typescript": "^0.1.2",
    "babel-jest": "^24.8.0",
    "babel-plugin-macros": "^2.5.1",
    "cross-env": "^5.2.0",
    "husky": "^2.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.1",
    "preval.macro": "^3.0.0",
    "react-testing-library": "^7.0.1",
    "sharp": "^0.22.1",
    "svgo": "^1.2.2",
    "typescript": "^3.5.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged && npm test"
    }
  },
  "lint-staged": {
    "*.{js,jsx,tsx,html,css,json,yml}": [
      "prettier --write",
      "git add"
    ],
    "*.{jpg,png}": [
      "npm run image",
      "git add static/img/"
    ],
    "*.svg": [
      "svgo --config=svgo.config.yml --",
      "git add"
    ]
  }
}
